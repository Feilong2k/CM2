{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step Decomposition",
  "type": "object",
  "required": ["steps"],
  "properties": {
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "step_number",
          "step_type",
          "file_path",
          "instructions",
          "assigned_to",
          "context_files"
        ],
        "properties": {
          "step_number": {
            "type": "integer",
            "minimum": 1
          },
          "step_type": {
            "type": "string",
            "enum": ["test", "implementation"]
          },
          "file_path": {
            "type": "string",
            "minLength": 1
          },
          "instructions": {
            "type": "string",
            "minLength": 1
          },
          "assigned_to": {
            "type": "string",
            "enum": ["TaraAider", "DevonAider"]
          },
          "context_files": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}